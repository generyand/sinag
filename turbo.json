{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env.example", "turbo.json", "pnpm-workspace.yaml"],
  "globalEnv": ["NODE_ENV", "CI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "public/**",
        "*.config.{js,ts,mjs}",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**",
        "packages/shared/src/generated/**"
      ],
      "env": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_API_V1_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "*.config.{js,mjs}", "eslint.config.*"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["src/**/*.{ts,tsx}", "tsconfig*.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/*.test.{ts,tsx,js,jsx}",
        "**/__tests__/**/*.{ts,tsx,js,jsx}",
        "*.config.{js,ts}",
        "package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
