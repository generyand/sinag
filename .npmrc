# SINAG Monorepo Configuration (pnpm)
# This project uses pnpm - see packageManager in package.json
# These settings are pnpm-specific and will cause warnings if npm is invoked

# Dependency hoisting strategy
shamefully-hoist=false
strict-peer-dependencies=false

# Performance optimizations
prefer-frozen-lockfile=true
auto-install-peers=true

# Monorepo configuration
link-workspace-packages=true
shared-workspace-lockfile=true

# Build optimization
side-effects-cache=true

# Next.js Compatibility (important for monorepos)
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@types/*
