{
  "name": "sinag",
  "version": "1.0.0",
  "description": "SINAG monorepo with NextJS frontend and FastAPI backend",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "cd apps/web && pnpm build",
    "dev": "./scripts/dev-worktree.sh all",
    "dev:web": "./scripts/dev-worktree.sh web",
    "dev:api": "./scripts/dev-worktree.sh api",
    "dev:no-celery": "./scripts/dev-worktree.sh no-celery",
    "dev:ports": "./scripts/dev-worktree.sh ports",
    "celery": "cd apps/api && pnpm dev:celery",
    "celery:logs": "docker compose logs -f celery-worker",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:api": "cd apps/api && pnpm test",
    "test:web": "cd apps/web && pnpm test",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "generate-types": "node scripts/generate-types.js",
    "watch-types": "node scripts/watch-generate.js",
    "prepare": "husky",
    "tree": "treee --dirs-first -I \"node_modules|.git|dist|build|.next|.turbo|coverage|.cache|__pycache__|.venv|.idea|.vscode\"",
    "redis:start": "docker ps --filter name=sinag-redis --format '{{.Names}}' | grep -q sinag-redis && echo 'âœ… Redis already running on localhost:6379' || (docker compose up -d redis && echo 'âœ… Redis started on localhost:6379')",
    "redis:stop": "docker compose stop redis && echo 'ðŸ›‘ Redis stopped'",
    "redis:restart": "docker compose restart redis && echo 'ðŸ”„ Redis restarted'",
    "redis:logs": "docker compose logs -f redis",
    "redis:status": "docker compose ps redis",
    "redis:cli": "docker exec -it sinag-redis redis-cli",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "worktree": "./scripts/worktree.sh",
    "worktree:create": "./scripts/worktree.sh create",
    "worktree:list": "./scripts/worktree.sh list",
    "worktree:remove": "./scripts/worktree.sh remove",
    "worktree:status": "./scripts/worktree.sh status",
    "worktree:ports": "./scripts/worktree.sh ports",
    "worktree:env": "./scripts/worktree.sh env",
    "worktree:env:all": "./scripts/worktree.sh env --all",
    "worktree:finish": "./scripts/worktree.sh finish"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "fastapi",
    "turborepo"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.0",
    "concurrently": "^9.2.1",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "lodash-es": "^4.17.21",
    "orval": "^7.10.0",
    "prettier": "^3.5.3",
    "tree-node-cli": "^1.6.0",
    "turbo": "^2.5.4"
  }
}